<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_animal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/list_animal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_animal_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/animal_detail"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@+id/btn_animal"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_animal_detail" />

</androidx.constraintlayout.widget.ConstraintLayout>